<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_menu_tab"
    tools:context=".MenuTabActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    sothree:umanoPanelHeight="60dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoDragView="@id/scrollView"
    android:id="@+id/sliding_layout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="16sp"
        android:gravity="center|top"
        android:text="Today's meals ..."
        android:paddingBottom="40dp"/>

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingBottom="40dp"
        android:id="@+id/calendarview">

    </CalendarView>

</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="What's in my kitchen?"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:fillViewport="true"
            android:id="@+id/scrolling">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/list"/>

            </LinearLayout>
        </ScrollView>
  
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="400dp">

            <EditText
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/input"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/input"
                android:id="@+id/storage"></Spinner>

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Add"
                android:layout_centerInParent="true"
                android:layout_below="@+id/storage"
                android:id="@+id/save"
                android:clickable="true"
                android:onClick="saveButtonClicked" />

        </RelativeLayout>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>